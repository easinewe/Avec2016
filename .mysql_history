use mysql;
select user, host from user;
create database avec_live;
create databasaes avec_dev;
create database avec_dev;
show databases;
create user 'avec'@'localhost' identified by 'av3cWITHus';
grant all on 'avec_%'.* to 'avec'@'localhost';
grant all on avec_%.* to 'avec'@'localhost';
grant all on avec_live.* to 'avec'@'localhost';
grant all on avec_dev.* to 'avec'@'localhost';
select user, host, db from db;
